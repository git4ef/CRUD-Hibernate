<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ef.model.Writer" table="writer">
        <meta attribute="class-description">
            This class contains writer's details.
        </meta>
        <id name="id" type="long" column="id_writer">
            <generator class="increment" />
        </id>
        <property name="firstName" column="first_name" type="string"/>
        <property name="lastName" column="last_name" type="string"/>
        <many-to-one name="region" cascade="all" lazy="false" column="region_id" class="ef.model.Region"/>
    <list name="posts" lazy="false" cascade="all">
        <key column="writer_id"/>
        <list-index column="idx"/>
        <one-to-many class="ef.model.Post"/>
    </list>
    </class>
</hibernate-mapping>